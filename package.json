{
  "name": "ogh",
  "version": "0.0.0",
  "private": true,
  "main": "index.js",
  "author": "Yuki Yamada <yamadayuuki0818@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@types/jest": "^24.0.3",
    "@types/mock-fs": "^3.6.30",
    "@types/node": "^13.5.0",
    "babel-preset-wantedly": "^0.0.2",
    "jest": "^24.1.0",
    "lerna": "^3.8.0",
    "lerna-changelog": "^0.8.2",
    "mock-fs": "^4.8.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build": "lerna run build",
    "build:watch": "run-p tsc:watch babel:watch",
    "tsc:watch": "lerna run --parallel tsc:watch",
    "babel:watch": "lerna run --parallel babel:watch",
    "test:watch": "lerna run --parallel test:watch",
    "prepublish": "npm run build",
    "publish": "lerna publish",
    "test": "lerna run --parallel test",
    "clean": "yarn lerna clean --yes && rm -rf packages/*/lib",
    "changelog": "yarn lerna-changelog"
  },
  "@yamadayuki/ogh-sample": {
    "prettier": {
      "config": "./.prettierrc",
      "pattern": "**/packages/**/*.{js,jsx,ts,tsx}",
      "ignorePath": "./.prettierignore"
    }
  },
  "changelog": {
    "repo": "yamadayuki/ogh",
    "labels": {
      "dependencies": "Update dependencies",
      "enhancement": "New feature or improvement",
      "bug": "Bug fix",
      "documentation": "Improve documentation"
    },
    "cacheDir": ".changelog"
  }
}
